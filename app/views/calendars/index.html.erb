<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name of Volunteer</th>
        <th>Contact Info</th>
        <th>Time</th>
        <th>Date</th>
        <th>Reserved By</th>
        <th colspan="6"></th>
      </tr>
    </thead>

  <tbody>
    <tr>
      <% @time_slots.each do |time_slot| %>
        <td><%= @time_slot.name %></td>
        <td><%= @time_slot.contact_info %></td>
        <td><%= @time_slot.start_time.strftime('%A, %B %d') %>, <%= @time_slot.start_time.strftime('%I:%M %p') %></td>
      <% end %>
    </tr>
  </table>
</div>
