<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Time Slot Details</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name of Volunteer</th>
        <th>Contact Info</th>
        <th>Time</th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
          <td><%= @time_slot.name %></td>
          <td><%= @time_slot.contact_info %></td>
          <td><%= @time_slot.start_time.strftime('%A, %B %d') %> at <%= @time_slot.start_time.strftime('%I:%M %p') %></td>
      </tr>
  </table>

  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Reserved By</th>
        <th>Address</th>
        <th>Contact Info</th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @appointment.name %>
        <td><%= @appointment.address %></td>
        <td><%= @appointment.contact_info %></td>
      </tr>
  </table>

  <br>

  <button><%= link_to 'Calendar', time_slots_path %></button>
  <button><%= link_to 'Add a Time Slot', new_time_slot_path %></button>

</div>
