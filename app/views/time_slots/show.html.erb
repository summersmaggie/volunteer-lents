
<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Time Slot Information:</h3>
  <ul>
    <li><strong>Date:</strong> <%= @time_slot.start_time.strftime('%I:%M %p') %></li>
    <li><strong>Time:</strong> <%= @time_slot.start_time.strftime('%A, %B %d') %></li>
    <li><strong>Name of Volunteer:</strong> <%= @time_slot.name %></li>
    <li><strong>Volunteer's Contact Info:</strong> <%= @time_slot.contact_info %></li>
  </ul>

  <% if @time_slot.appointments.any? %>
      <li><strong>This time slot is reserved by:</strong> <%= @appointment.name %>.</strong>
  <% else %>
      <button><%= link_to 'Reserve this spot!', new_time_slot_appointment_path(@time_slot) %></button>
  <% end %>

  <br>
  <%= link_to 'Edit', edit_time_slot_path(@time_slot) %> |
  <%= link_to 'Back', calendars_path %>

</div>
