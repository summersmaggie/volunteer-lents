
<%= form_with(model: time_slot, local: true) do |form| %>
  <% if time_slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(time_slot.errors.count, "error") %> prohibited this time_slot from being saved:</h2>

      <ul>
      <% time_slot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "What's your name?" %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= form.label :contact_info, "Please enter your email or phone number:" %>
    <%= form.text_field :contact_info %>
  </div>
  <br>
  <div class="field">
    <%= form.label :start_time, 'What day and time are you able to volunteer?' %>
    <%= form.datetime_field :start_time %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
