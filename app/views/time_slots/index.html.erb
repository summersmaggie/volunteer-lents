<div class="container">
  <h2>Available Time Slots</h2>
  <p>Click a time slot below that works with your schedule to make a reservation.</p>

  <br>
  <%= month_calendar events: @time_slots do |date, time_slots| %>
    <%= date.day %>

    <% time_slots.each do |time_slot| %>
      <% if time_slot.appointments.any? %>
        <p><%= link_to time_slot.start_time.strftime('%I:%M %p'), time_slot_path(time_slot.id) %></p>
      <% else %>
        <p><%= link_to time_slot.start_time.strftime('%I:%M %p'), new_time_slot_appointment_path(time_slot.id) %></p>
    <% end %>
  <% end %>
  <% end %>

  <button><%= link_to 'Back to Home', root_path %></button>
  <button><%= link_to 'See all current appointments', time_slots_path %></button>
</div>
